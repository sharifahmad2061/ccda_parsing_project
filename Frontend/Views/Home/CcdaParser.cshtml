@{
    ViewData["Title"] = "Ccda Parsing Task";
}

<div class="jumbotron">
    <h1 class="mb-4">Ccda Parser</h1>
    <form asp-controller="Home" asp-action="CcdaParser" method="post">
        <div class="form-group">
            <label for="PracticeCode">Practice Code</label>
            <input type="text" class="form-control" name="PracticeCode" id="PracticeCode">
        </div>
        <div class="form-group">
            <label for="FolderPath">Folder Path</label>
            <input type="text" class="form-control" name="DataStorePath" id="FolderPath">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="EmailOnCompletion" id="SendEmail">
            <label for="SendEmail">Send Email on Completion</label>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" name="RecepientEmail" disabled>
        </div>
        <input type="submit" class="btn btn-primary">
    </form>
</div>